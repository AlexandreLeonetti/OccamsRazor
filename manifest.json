{
	"manifest_version":2,
	"name":"The Eraser",
	"version":"1.0.0",
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"content_scripts":[
		{
			"matches":["<all_urls>"],
			"js":["/content_script.js"]
		}
	],
	"browser_action":{
		"browser_style":true,
		"default_icon":{
			"48":"/icon.png"
		},
		"default_title":"The Eraser",
		"default_popup":"/popup.html"
	},
	"permissions":["activeTab","storage","tabs"]
}

